<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/control"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="00dp"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="com.example.admin.mp3player.Common.Bottomsheet">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/musicPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ivmusic" />


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="160dp"
        android:layout_marginLeft="70dp"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="00dp"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="dgvsfhdfjnfgkmfhydk"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/artist1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="00dp"
            android:layout_marginTop="5dp"
            android:lines="1"
            android:text="dgvsfhdfjnfgkmfhydk"
            android:textColor="#000000"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="230dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/icnotifprev"
            android:tint="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_bottom_prev"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/icnotifpause"
            android:layout_marginLeft="20dp"
            android:tint="#000000"
            android:id="@+id/iv_bottom_play"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@drawable/icnotifnext"
            android:layout_marginLeft="20dp"
            android:tint="#000000"
            android:id="@+id/iv_bottom_next"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

</RelativeLayout>
