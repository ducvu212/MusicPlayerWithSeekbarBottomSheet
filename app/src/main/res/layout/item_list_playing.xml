<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relayInfo"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="70dp"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="com.example.admin.mp3player.Common.Bottomsheet"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:id="@+id/showing_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ivmusicbackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showing_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="sbdjvbdsjvbdsh"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/showing_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="sbdjvbdsjvbdsh"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/showing_seekbar"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/showing_prev"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingLeft="-30dp"
                android:src="@drawable/icnotifprev" />

            <ImageView
                android:id="@+id/showing_play"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/icnotifpause" />

            <ImageView
                android:id="@+id/showing_next"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="7dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:paddingRight="0dp"
                android:src="@drawable/icnotifnext" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>