<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBlur"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_music_background"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="-100dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/nameRun"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-600dp"
            android:gravity="center"
            android:text="hbvsdjvbnsdfbnfm,dfm,ndffnddfn"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/artistRun"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="hbvsdjvbnsdfbnfm,dfm,ndffnddfn"
            android:textColor="#ffffff"
            android:textSize="15sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPlay"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/ivmusic" />


        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:progressTint="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="470dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timeRemain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="adfvsdvbds"
            android:textColor="#ffffff"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prev"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:paddingLeft="-30dp"
            android:src="@drawable/icnotifprev" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/icnotifpause" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:paddingRight="0dp"
            android:src="@drawable/icnotifnext" />

    </LinearLayout>

</RelativeLayout>
